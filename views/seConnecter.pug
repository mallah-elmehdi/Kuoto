extends base

block append footer
    script(src="/../js/seConnecter.js")

block content
    - var messages = getMessages()
    if (messages.message)
        section.text-center.fixed-top.w-max-0.mx-auto.text-white
            .alert.bg-danger.alert-dismissible.fade.show.rounded-0(role="alert")
                i.fas.fa-times-circle
                span.ml-2.my-auto= messages.message
                button.close(type="button" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
    section.container
        .text-center.my-5.bg-white.p-5.w-max-0.mx-auto.shadow-sm
            a(href="/")
                img.mb-3(src="/../graphics/logo.png" width="70px" alt="Kauto.ma")
            form(action="/se-connecter" method="post")
                .form-group
                    -var val = messages.email || ""
                    input.form-control.rounded-0(type="text" name="email" id="email" placeholder="vous@exemple.com" value=`${val}`)
                .form-group
                    input.form-control.rounded-0(type="password" name="password" id="password" placeholder="Tapez votre mot de passe")
                    
                button.btn.btn-primary.w-100.rounded-0(id="se-connecter") Se connecter
                .my-2
                    a.text-decoration-none(href="/reinitialiser-mot-de-passe") Mot de passe oubli√©?
            hr.my-1
            a.btn.btn-light.w-100.rounded-0.mt-3(href="/inscrire") S'inscrire
extends base

block append footer
    script(src="/../js/parametresPasswordChange.js")

block content
    include _header

    - var messages = getMessages()
    if (messages.message)
        section.text-center.fixed-top.w-max-1.mx-auto.text-white
            .alert.bg-danger.alert-dismissible.fade.show.rounded-0(role="alert")
                i.fas.fa-times-circle
                span.ml-2.my-auto= messages.message
                button.close(type="button" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;

    .container
        .row.my-3
            .col-lg-3.col-md-3
                include _btqban
            .col-lg-9.col-md-9
                .mb-3.bg-white.p-3.mx-auto.shadow-sm
                    form(action=`/mon-agence/${user._id}/parametres/changer-le-mot-de-passe/${token}`, method="post")
                        .form-group
                            input.form-control.rounded-0(type="password" id="password" name="password" placeholder="Tapez un mot de passe")
                        .form-group
                            input.form-control.rounded-0(type="password" id="repassword" name="repassword" placeholder="Comfirmez le mot de passe")
                        button.btn.btn-primary.rounded-0(id="edit") Enregistrer

    .text-center.fixed-bottom.mb-3#copy
        small.text-muted &copy; 2020 Kauto.ma

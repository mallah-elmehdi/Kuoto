extends base

block append footer
    script(src="/../js/inscrire.js")


block content
    - var messages = getMessages()
    if (messages.message)
        section.text-center.fixed-top.w-max-0.mx-auto.text-white
            .alert.bg-danger.alert-dismissible.fade.show.rounded-0(role="alert")
                i.fas.fa-times-circle
                span.ml-2.my-auto= messages.message
                button.close(type="button" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
    section.container
        .text-center.my-5.bg-white.p-5.w-max-0.mx-auto.shadow-sm
            a(href="/")
                img.mb-3(src="/../graphics/logo.png" width="70px" alt="Kauto.ma")
            p.fn-18 Profitez les nouvelles offres et commencer à découvrir le Maroc
            form(action="/inscrire" method="post")
                .form-group

                    -var email = messages.email || ""
                    -var name = messages.name || ""

                    input.form-control.rounded-0(type="text" id="name" name="name" placeholder="Nom et Prénom" value=`${name}`)
                .form-group
                    input.form-control.rounded-0(type="text" id="email" name="email" placeholder="vous@example.com" value=`${email}`)
                .form-group
                    input.form-control.rounded-0(type="password" id="password" name="password" placeholder="tapez un mot de passe")
                .form-group
                    input.form-control.rounded-0(type="password" id="repassword" name="repassword" placeholder="confirmez le mot de passe")
                button.btn.btn-primary.w-100.rounded-0.mb-3(id="inscrire" type="sumbit") S'inscrire
            hr.my-1
            a.btn.btn-light.w-100.rounded-0.mt-3(href="/se-connecter") se connecter